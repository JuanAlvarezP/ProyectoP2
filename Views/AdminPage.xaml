<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoP2.AdminPage"
             Title="AdminPage"
             BackgroundColor="Wheat">
    <AbsoluteLayout>
        <!-- Imagen encima del botón -->
        <Image Source="perros_gatos.png" 
               Aspect="AspectFit"
               AbsoluteLayout.LayoutBounds="0.5, 0.1, 0.5, 0.5"
               AbsoluteLayout.LayoutFlags="All" />

        <!-- Botón en el centro -->
        <Button BackgroundColor="#9f5d34"
                Text="Ingresar"
                Clicked="botonEntrar"
                TextColor="White"
                AbsoluteLayout.LayoutBounds="0.5, 0.5, 0.4, 0.1"
                AbsoluteLayout.LayoutFlags="All"/>

        <!-- Imágenes de patitas en las esquinas -->
        

        <Image Source="huellas.png" 
               AbsoluteLayout.LayoutBounds="1, 0, 0.2, 0.2"
               AbsoluteLayout.LayoutFlags="All" />

        <Image Source="huellas.png" 
               AbsoluteLayout.LayoutBounds="0, 1, 0.2, 0.2"
               AbsoluteLayout.LayoutFlags="All" />

        
    </AbsoluteLayout>
</ContentPage>