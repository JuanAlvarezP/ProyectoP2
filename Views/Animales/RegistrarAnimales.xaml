<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoP2.RegistrarAnimales"
             Title="RegistrarAnimales"
             BackgroundColor="Wheat">

    <StackLayout Padding="20">
        <Label Text="Registrar Nuevo Animal" FontSize="Title" HorizontalOptions="CenterAndExpand" Margin="0,10,0,20" />

        <Entry Placeholder="Nombre" x:Name="entryNombre" />
        <Entry Placeholder="Especie" x:Name="entryEspecie" />
        <Entry Placeholder="Raza" x:Name="entryRaza" />
        <DatePicker Date="{Binding FechaNacimiento}" Format="dd/MM/yyyy" x:Name="datePickerFechaNacimiento" />
        <Picker Title="GÃ©nero" x:Name="pickerGenero">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Macho</x:String>
                    <x:String>Hembra</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Entry Placeholder="Observaciones" x:Name="entryObservaciones" />

        <Button Text="Registrar" Clicked="RegistrarClicked" HorizontalOptions="FillAndExpand" Margin="0,20,0,0" />
    </StackLayout>


</ContentPage>