<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoP2.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Bienvenido a ClawsANDPaws"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="24"
                HorizontalOptions="Center" />

            <Image
                Source="perros_gatos.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />



            <Button Grid.Row="2"
                    BackgroundColor="#9f5d34"
                    Text= "Citas"
                    Clicked="botonCitas"
                    TextColor="White"/>
                    

            <Button Grid.Row="2"
                    BackgroundColor="#9f5d34"
                    Text="Animales"
                    Clicked="botonAnimales"
                    TextColor="White"/>

            <Button Grid.Row="2"
                    BackgroundColor="#9f5d34"
                    Text="Cliente"
                    Clicked="botonClientes"
                    TextColor="White"/>



        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
