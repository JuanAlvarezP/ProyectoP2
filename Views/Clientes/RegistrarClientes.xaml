<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoP2.RegistrarClientes"
             Title="RegistrarClientes"
             BackgroundColor="Wheat">
    <StackLayout Padding="20">
        <Entry Placeholder="Nombre" x:Name="entryNombre" />
        <Entry Placeholder="Apellido" x:Name="entryApellido" />
        <Entry Placeholder="Correo Electrónico" x:Name="entryCorreo" />
        <Entry Placeholder="Número de Teléfono" x:Name="entryTelefono" />
        <DatePicker x:Name="datePickerFechaRegistro" />

        <Button Text="Guardar" Clicked="GuardarClienteClicked" />
    </StackLayout>
</ContentPage>