<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoP2.RegistrarClientes"
             Title="RegistrarClientes"
             BackgroundColor="Wheat">
    <StackLayout Padding="20">
        <Label Text="Nombre" />
        <Entry x:Name="entryNombre" Placeholder="Nombre del cliente" />

        <Label Text="Apellido" />
        <Entry x:Name="entryApellido" Placeholder="Apellido del cliente" />

        <Label Text="Correo Electrónico" />
        <Entry x:Name="entryCorreo" Placeholder="Correo electrónico" />

        <Label Text="Número de Teléfono" />
        <Entry x:Name="entryTelefono" Placeholder="Número de teléfono" />

        <Label Text="Dirección" />
        <Entry x:Name="entryDireccion" Placeholder="Dirección del cliente" />

        <Button Text="Guardar" Clicked="GuardarClienteClicked" />
    </StackLayout>
</ContentPage>